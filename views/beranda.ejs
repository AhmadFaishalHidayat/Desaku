<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>beranda</title>
  </head>
  <body>
    <h1>Beranda</h1>
    <a href="/beranda/addPost"><button>BUAT POSTINGAN</button></a>
    <form action="/beranda" method="GET" style="margin: 2px">
      <input type="text" id="search" name="search" />
      <section>
        <button type="submit">Search</button>
      </section>
    </form>

    <% data.forEach(el => { %>
    <div class="card">
      <img
        src="<%= el.imgUrl %>"
        alt="Avatar"
        style="width: 300px; height: 300px"
      />
      <div class="container">
        <h4><b><%= el.title %></b></h4>
        <p><%= el.content %></p>
      </div>
      <% el.Tags.forEach(el2 => { %>
      <a href="/beranda?tags=<%= el2.name %>"><p>#<%= el2.name %></p></a>
      <% }) %>
    </div>
    <% }) %>
  </body>
</html>
